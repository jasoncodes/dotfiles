# Set your name and email with the following:
#   git config -f ~/.gitconfig.local user.name "John Appleseed"
#   git config -f ~/.gitconfig.local user.email me@example.com

[include]
path = .gitconfig.local

[color]
ui = auto

[diff]
colorMoved = default

[color "diff"]
commit = yellow reverse

[init]
defaultBranch = main

[core]
excludesfile = ~/.gitignore
pager = "(if command -v diff-highlight > /dev/null; then exec diff-highlight; else exec cat; fi) | ${PAGER:-less}"

[interactive]
diffFilter = "(if command -v diff-highlight > /dev/null; then exec diff-highlight; else exec cat; fi)"

[push]
default = tracking

[merge]
log = true
conflictstyle = diff3
tool = vimdiff

[rerere]
enabled = 1

[diff]
compactionHeuristic = true

[difftool "vimdiff"]
cmd = vimdiff $LOCAL $REMOTE

[mergetool]
prompt = false

[rebase]
autosquash = true
autostash = true

[tag]
sort = version:refname

[git-up "bundler"]
check = true

[git-up "rebase"]
auto = false

[gitflow "branch"]
master = master
develop = develop

[gitflow "prefix"]
feature = feature/
release = release/
hotfix = hotfix/
support = support/
versiontag =

[git-up "rebase"]
arguments = --rebase-merges
